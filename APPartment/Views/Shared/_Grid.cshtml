@model IEnumerable<APPartment.Models.Base.BaseObject>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Home Data</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-1">
                <a asp-action="Create"><button type="button" class="btn btn-primary"><i class="fas fa-plus"></i> Add</button></a>
            </div>
        </div>

        <br />

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DetailsSortParm"]">Details</a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]">Status</a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Name.Length <= 20)
                                {
                                    <p>@item.Name</p>
                                }
                                else
                                {
                                    var itemNameResult = item.Name.Substring(0, 20) + "...";

                                    <p>@itemNameResult</p>
                                }
                            </td>
                            <td>
                                @if (item.Details.Length <= 50)
                                {
                                    <p>@item.Details</p>
                                }
                                else
                                {
                                    var itemDetailsResult = item.Details.Substring(0, 50) + "...";

                                    <p>@itemDetailsResult</p>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Status == 1)
                                {
                                    <span class="dot-success"></span>
                                }
                                else if (item.Status == 2 || item.Status == 3)
                                {
                                    <span class="dot-warning"></span>
                                }
                                else
                                {
                                    <span class="dot-danger"></span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></button></a> &nbsp;
                                <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i></button></a> &nbsp;
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteObjectModal"><i class="far fa-trash-alt"></i></button>

                                <div class="modal fade" id="deleteObjectModal" tabindex="-1" role="dialog" aria-labelledby="deleteObjectModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteObjectModalLabel">Confirm Deletion</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this item?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>